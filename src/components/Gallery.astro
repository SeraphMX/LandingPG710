</div>

<script>
  import PhotoSwipe from 'photoswipe';
import PhotoSwipeUI_Default from 'photoswipe/dist/photoswipe-ui-default.js';
import Swiper from 'swiper';
import { Navigation, Pagination } from 'swiper/modules';

  document.addEventListener('DOMContentLoaded', () => {
    // Initialize Swiper
    const swiper = new Swiper('.gallery-swiper', {
      modules: [Navigation, Pagination],
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });

    // PhotoSwipe initialization for both desktop and mobile
    function initPhotoSwipe(galleryElement) {
      const items = Array.from(galleryElement.querySelectorAll('a')).map(link => {
        return {
          src: link.href,
          w: 1600,
          h: 1067,
          title: link.getAttribute('data-title') || '',
        };
      });

      const galleryLinks = galleryElement.querySelectorAll('a');
      galleryLinks.forEach((link, index) => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          
          const options = {
            index: index,
            bgOpacity: 0.9,
            showHideOpacity: true,
            history: false,
            shareEl: false,
          };

          const gallery = new PhotoSwipe(
            document.querySelector('.pswp'),
            PhotoSwipeUI_Default,
            items,
            options
          );

          gallery.init();
        });
      });
    }

    // Initialize PhotoSwipe for desktop gallery
    const desktopGallery = document.getElementById('gallery-container');
    if (desktopGallery) {
      initPhotoSwipe(desktopGallery);
    }

    // Initialize PhotoSwipe for mobile swiper
    const mobileGallery = document.querySelector('.gallery-swiper');
    if (mobileGallery) {
      initPhotoSwipe(mobileGallery);
    }
  });
</script>

